{
    "name": "fossar/guzzle-transcoder",
    "description": "Guzzle plugin that converts responses to UTF-8",
    "type": "library",
    "require": {
        "guzzlehttp/guzzle": "^6.3",
        "ddeboer/transcoder": "^1.0",
        "guzzlehttp/psr7": "^1.5"
    },
    "require-dev" : {
        "friendsofphp/php-cs-fixer": "^2.14",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "symfony/phpunit-bridge": "~2.6|~3.0|~4.0"
    },
    "autoload": {
        "psr-4": { "Fossar\\GuzzleTranscoder\\": "src/" }
    },
     "autoload-dev": {
        "psr-4": { "Fossar\\GuzzleTranscoder\\Tests\\": "tests/" }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jan Tojnar",
            "email": "jtojnar@gmail.com"
        }
    ],
    "scripts": {
        "cs": "php-cs-fixer fix --dry-run",
        "fix": "php-cs-fixer fix",
        "lint": "parallel-lint src",
        "test": "simple-phpunit"
    },
    "config": {
        "platform": {
            "php": "5.6.0"
        }
    },
    "minimum-stability": "stable"
}
